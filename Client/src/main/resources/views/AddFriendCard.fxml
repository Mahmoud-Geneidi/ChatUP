<HBox alignment="CENTER" prefHeight="82.0" prefWidth="333.0" styleClass="number-card" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fx:id="friendImage" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
         <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </HBox.margin>
         <image>
            <Image url="@../images/avatar1.png" />
         </image>
      </ImageView>
      <VBox prefHeight="90.0" prefWidth="300.0">
         <children>
            <Label fx:id="friendNameId" text="Ziad Yasser" textFill="#041014">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="5.0" left="15.0" right="10.0" top="23.0" />
               </VBox.margin>
               <cursor>
                  <Cursor fx:constant="TEXT" />
               </cursor>
            </Label>
            <Label fx:id="friendPhne" text="010000000056" textFill="#040f1280">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets left="15.0" />
               </VBox.margin>
               <cursor>
                  <Cursor fx:constant="TEXT" />
               </cursor>
            </Label>
         </children>
         <HBox.margin>
            <Insets bottom="5.0" />
         </HBox.margin>
      </VBox>
      <MFXButton onAction="#deleteInvitation" prefWidth="27.0" style="-fx-background-color: none;" text=" ">
         <graphic>
            <ImageView fitHeight="40.0" fitWidth="25.0" opacity="0.7" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/Delete-Bin-Trash-PNG-Clipart.png" />
               </image>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </ImageView>
         </graphic>
         <HBox.margin>
            <Insets right="10.0" />
         </HBox.margin>
      </MFXButton>
   </children>
</HBox>
